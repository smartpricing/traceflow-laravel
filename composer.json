{
    "name": "smartness/traceflow-laravel",
    "description": "Production-ready distributed tracing SDK for Laravel with event-sourced architecture, async HTTP transport, and cross-service context propagation",
    "type": "library",
    "keywords": [
        "laravel",
        "tracing",
        "distributed-tracing",
        "observability",
        "monitoring",
        "event-sourcing",
        "async",
        "kafka",
        "microservices",
        "apm",
        "telemetry"
    ],
    "homepage": "https://github.com/smartpricing/traceflow-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Smartness",
            "email": "tech@smartness.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/smartpricing/traceflow-sdk/issues",
        "source": "https://github.com/smartpricing/traceflow-sdk",
        "docs": "https://github.com/smartpricing/traceflow-sdk/blob/master/php/laravel/README.md"
    },
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "illuminate/support": "^10.0|^11.0",
        "illuminate/http": "^10.0|^11.0",
        "guzzlehttp/guzzle": "^7.8",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "orchestra/testbench": "^8.0|^9.0",
        "phpstan/phpstan": "^1.10",
        "laravel/pint": "^1.26",
        "mockery/mockery": "^1.6"
    },
    "suggest": {
        "enqueue/rdkafka": "Required for Kafka transport support (^0.10)"
    },
    "autoload": {
        "psr-4": {
            "Smartness\\TraceFlow\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Smartness\\TraceFlow\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "@test:unit",
            "@test:feature"
        ],
        "test:unit": "vendor/bin/phpunit --testsuite=Unit --colors=always",
        "test:feature": "vendor/bin/phpunit --testsuite=Feature --colors=always",
        "test:coverage": "vendor/bin/phpunit --coverage-html coverage --coverage-text",
        "test:coverage:clover": "vendor/bin/phpunit --coverage-clover coverage.xml",
        "analyse": "vendor/bin/phpstan analyse src --level=5 --memory-limit=256M",
        "format": "vendor/bin/pint",
        "format:check": "vendor/bin/pint --test",
        "ci": [
            "@format:check",
            "@analyse",
            "@test:coverage"
        ]
    },
    "scripts-descriptions": {
        "test": "Run all test suites (unit + feature)",
        "test:unit": "Run unit tests only",
        "test:feature": "Run feature/integration tests only",
        "test:coverage": "Generate HTML and text coverage reports",
        "analyse": "Run PHPStan static analysis",
        "format": "Format code using Laravel Pint",
        "format:check": "Check code formatting without making changes",
        "ci": "Run all CI checks (format, analysis, tests)"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Smartness\\TraceFlow\\TraceFlowServiceProvider"
            ],
            "aliases": {
                "TraceFlow": "Smartness\\TraceFlow\\Facades\\TraceFlow"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
