{
    "name": "smartpricing/traceflow-laravel",
    "description": "TraceFlow SDK for Laravel - Stateless distributed tracing with HTTP and Kafka support",
    "type": "library",
    "keywords": [
        "laravel",
        "tracing",
        "distributed-tracing",
        "observability",
        "monitoring",
        "kafka",
        "http"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Smartpricing",
            "email": "tech@smartpricing.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0",
        "guzzlehttp/guzzle": "^7.0",
        "ramsey/uuid": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "orchestra/testbench": "^8.0|^9.0",
        "phpstan/phpstan": "^1.0"
    },
    "suggest": {
        "enqueue/rdkafka": "Required for Kafka transport (^0.10)"
    },
    "autoload": {
        "psr-4": {
            "Smartpricing\\TraceFlow\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Smartpricing\\TraceFlow\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Smartpricing\\TraceFlow\\TraceFlowServiceProvider"
            ],
            "aliases": {
                "TraceFlow": "Smartpricing\\TraceFlow\\Facades\\TraceFlow"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

