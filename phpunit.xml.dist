<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.5/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
         failOnRisky="true"
         failOnWarning="true"
         stopOnFailure="false">
    <testsuites>
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>
        <testsuite name="Integration">
            <directory>tests/Feature</directory>
            <exclude>tests/Feature/ErrorHandlingTest.php</exclude>
        </testsuite>
        <testsuite name="Resilience">
            <file>tests/Feature/ErrorHandlingTest.php</file>
        </testsuite>
    </testsuites>
    <php>
        <env name="APP_ENV" value="testing"/>
        <!--
            For local testing, copy this file to phpunit.xml and configure:
            - TRACEFLOW_ENDPOINT: Your local TraceFlow server endpoint
            - TRACEFLOW_API_KEY: Your development API key

            IMPORTANT: phpunit.xml is git-ignored to prevent credential leaks
        -->
        <env name="TRACEFLOW_ENDPOINT" value="http://localhost:3009"/>
        <env name="TRACEFLOW_API_KEY" value="your-test-api-key-here"/>
    </php>
    <source>
        <include>
            <directory suffix=".php">src</directory>
        </include>
        <exclude>
            <directory>src/Facades</directory>
        </exclude>
    </source>
</phpunit>
